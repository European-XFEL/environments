#%Module 1.0
#
#  glups
#
proc ModulesHelp {} {
    puts stdout     " "
    puts stdout     " Python environment for Glups (Calibration job monitoring tool)  "
    puts stdout     " "
}

module-whatis  "Setup environemt for Glups (calibration job monitoring tool"
if { [ module-info mode load ] } {
    system "/gpfs/exfel/sw/software/local/etc/metrics.sh 'glups/0.1'"
    prepend-path PATH    /gpfs/exfel/sw/software/xfel_anaconda3/glups/bin/
    setenv _CONDA_EXE    /gpfs/exfel/sw/software/xfel_anaconda3/glups/bin/conda
    setenv _CONDA_ROOT   /gpfs/exfel/sw/software/xfel_anaconda3/glups/bin/
    setenv              OPENCL_VENDOR_PATH /etc/OpenCL/vendors
} elseif { [module-info mode remove] && ![module-info mode switch3] } {
    remove-path PATH /gpfs/exfel/sw/software/xfel_anaconda3/glups/bin/
    unsetenv _CONDA_EXE
    unsetenv _CONDA_ROOT
    unsetenv OPENCL_VENDOR_PATH
}

